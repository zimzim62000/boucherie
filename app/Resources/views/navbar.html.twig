<nav data-topbar="" class="top-bar">
    <ul class="title-area">
        <li class="name">
            <a href="{{ path('zimzim_bundles_user_homepage') }}">
                {{ 'views.navbar.title'|trans }}
            </a>
        </li>
        <li class="toggle-topbar menu-icon"><a href="">{{ 'views.navbar.menu'|trans }}</a></li>
    </ul>

    <section class="top-bar-section">
        {% if is_granted('ROLE_USER') %}
            <ul class="right">
                <li class="divider"></li>
                <li class="has-dropdown not-click">
                    <a href="#">{{ app.user.username }}</a>
                    <ul class="dropdown">
                        <li class="title back js-generated">
                            <a href="javascript:void(0);">
                                {{ 'views.navbar.back'|trans }}
                            </a>
                        </li>
                        <li class="">
                            <a href="{{ path('fos_user_profile_show') }}">
                                {{ 'views.navbar.edit'|trans }}
                            </a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="divider"></li>
                            <li class="">
                                <a href="{{ path('zimzim_bundles_user_list') }}">
                                    {{ 'views.navbar.userlist'|trans }}
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li class="">
                                <a href="{{ path('zimzim_opinion_opinionlevel') }}">
                                    {{ 'views.navbar.opinionlevel'|trans }}
                                </a>
                            </li>
                            <li class="divider"></li>
                        {% endif %}
                        <li class="">
                            <a href="{{ path('fos_user_security_logout') }}">
                                {{ 'views.navbar.logout'|trans }}
                            </a>
                        </li>
                        <li class="divider"></li>
                    </ul>
                </li>
                <li class="divider"></li>
            </ul>
        {% else %}
            <ul class="right">
                <li class="divider"></li>
                <li class="has-form">
                    <a href="{{ path('hwi_oauth_connect') }}">
                        {{ 'views.navbar.login'|trans }}
                    </a>
                </li>
            </ul>
        {% endif %}
    </section>
</nav>